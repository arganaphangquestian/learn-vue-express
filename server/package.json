{
  "name": "server",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "build": "esbuild ./src/index.ts --bundle --platform=node --outfile=./dist/index.js",
    "start": "npm run build && node dist",
